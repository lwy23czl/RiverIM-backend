        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cn.river.im.mapper.UserMapper">

    <resultMap id="BaseResultMap" type="cn.river.im.entity.User">
            <id property="id" column="id" jdbcType="BIGINT"/>
            <result property="nickName" column="nick_name" jdbcType="VARCHAR"/>
            <result property="headPortrait" column="head_portrait" jdbcType="VARCHAR"/>
            <result property="passWord" column="pass_word" jdbcType="VARCHAR"/>
            <result property="power" column="power" jdbcType="INTEGER"/>
            <result property="accountNumber" column="account_number" jdbcType="VARCHAR"/>
            <result property="creationTime" column="creation_time" jdbcType="TIMESTAMP"/>
            <result property="isDel" column="is_del" jdbcType="TINYINT"/>
    </resultMap>

    <sql id="Base_Column_List">
        id,nick_name,head_portrait,
        pass_word,power,account_number,
        creation_time,is_del
    </sql>
</mapper>
